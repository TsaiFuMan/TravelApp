<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelApp.TaichungAttractionsDetailPage"
             Title="TaichungAttractionsDetailPage">
    <ScrollView>
        <StackLayout Padding="20" Spacing="10">
            <Label x:Name="lblName" FontSize="24" FontAttributes="Bold"/>
            <Label x:Name="lblIntroduction" FontSize="18"/>
            <Label x:Name="lblTownshipAndAddress" FontSize="16" LineBreakMode="WordWrap"/>
            <Label x:Name="lblPhone" FontSize="16"/>
            <Label x:Name="lblTickets" FontSize="16"/>
        </StackLayout>
    </ScrollView>
</ContentPage>